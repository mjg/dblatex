<!-- Exemple de table avec des tailles fixées (et d'autres non) -->

<informaltable>
<tgroup cols="5" colsep="1" rowsep="1" align="left">
<colspec colname="c1">
<colspec align="left" colwidth="*+4cm">
<colspec align="right" colwidth="5cm+3*">
<colspec align="center">
<colspec align="center" colwidth="3cm">
<thead>
<row>
<entry>Column 1</entry>
<entry>Column 2</entry>
<entry>Column 3</entry>
<entry>Column 4</entry>
<entry>Column 5</entry>
</row>
</thead>
<tbody>
<row>
<entry align="center" valign="top">left aligned (tgroup order)
</entry><entry align="center" valign="top">left aligned
</entry><entry align="center" valign="top">right aligned
</entry><entry align="center" valign="top">centered cell
</entry><entry align="center" valign="top">in the centre
</entry></row>
<row>
<entry align="center" valign="top">no specified width
</entry><entry align="center" valign="top">4 cm column width
</entry><entry align="center" valign="top">5 cm column width
</entry><entry align="center" valign="top">no width
</entry><entry align="center" valign="top">3 cm column width
</entry></row>
</tbody>
</tgroup>
</informaltable>

